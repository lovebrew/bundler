{
    "name": "bun-react-template",
    "version": "1.1.0",
    "private": true,
    "type": "module",
    "main": "src/index.tsx",
    "module": "src/index.tsx",
    "browserslist": [
        "defaults and fully supports es6-module",
        "maintained node versions"
    ],
    "apiBase": {
        "development": "http://localhost:5000",
        "production": "https://api.bundle.lovebrew.org"
    },
    "scripts": {
        "dev": "bun --hot src/index.html",
        "format": "bunx prettier --write .",
        "start": "bun run build && bunx http-server dist",
        "build": "NODE_ENV=production bun run build.ts",
        "deploy": "gh-pages -d dist"
    },
    "dependencies": {
        "@types/dexie": "^1.3.35",
        "@types/howler": "^2.2.12",
        "@types/murmurhash3js": "^3.0.7",
        "@zip.js/zip.js": "^2.8.10",
        "arktype": "^2.1.27",
        "browserslist": "^4.28.0",
        "caniuse-lite": "^1.0.30001755",
        "dexie": "^4.2.1",
        "file-type": "^21.1.0",
        "gh-pages": "^6.3.0",
        "gray-matter": "^4.0.3",
        "howler": "^2.2.4",
        "ignore": "^7.0.5",
        "murmurhash3js": "^3.0.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-hot-toast": "^2.6.0",
        "react-markdown": "^10.1.0",
        "sonner": "^2.0.7",
        "toml": "^3.0.0",
        "typescript": "^5.9.3",
        "update-browserslist-db": "^1.1.4"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "http-server": "^14.1.1"
    }
}
